global_defs {
   router_id LVS_k8s
}

vrrp_script CheckK8sMaster {
    script "curl -khttps://{{ kubeapiserver }}:6443"
    interval 3
    timeout 9
    fall 2
    rise 2
}

vrrp_instance VI_1 {
    state {{ lb_role }}
    interface {{ if }}
    virtual_router_id 61
    priority {{ priority }}
    advert_int 1
    mcast_src_ip {{ ansible_host }}
    nopreempt
    authentication {
        auth_type PASS
        auth_pass sqP05dQgMSlzrxHj
    }
    unicast_peer {
    {% for h in peers %}{% if h != ansible_host %}
        {{ h }}
    {% endif %}{% endfor %}
    }
    virtual_ipaddress {
        {{ keepalived_vip }}/24
    }
    track_script {
        CheckK8sMaster
    }

}
